<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestingStudentKnowledge.MainPage">

    <ContentPage.Content>
        <StackLayout BackgroundColor="#191414">
            <Button
                x:Name="startTestButton"
                Text="Розпочати тест"
                TextTransform="None"
                FontSize="36"
                TextColor="White"
                BackgroundColor="#1DB954"
                TranslationY="180"
                CornerRadius="75"
                Margin="40,20,40,20"
                />
            <Button
                x:Name="leaderboardButton"
                Text="Таблиця лідерів"
                TextTransform="None"
                FontSize="28"
                TextColor="White"
                BackgroundColor="#1DB954"
                TranslationY="190"
                CornerRadius="75"
                Margin="60,20,60,20"
                />
            <Button
                x:Name="settingsButton"
                Text="Налаштування"
                TextTransform="None"
                FontSize="28"
                TextColor="White"
                BackgroundColor="#1DB954"
                TranslationY="190"
                CornerRadius="75"
                Margin="60,20,60,20"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>